{
  "name": "passo-a-passo-app",
  "version": "1.0.0",
  "description": "Passo a Passo - Mantenedor de base de conhecimento de procedimentos tÃ©cnico-administrativos institucionais",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc es2017 --outDir dist",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist",
    "lint": "npm run prettier:check && npm run tslint",
    "lint:fix": "npm run tslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "tslint": "lb-tslint",
    "tslint:fix": "npm run tslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t passo-a-passo-app .",
    "docker:run": "docker run -p 3000:3000 -d passo-a-passo-app",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node .",
    "prepublishOnly": "npm run test",
    "webpack": "webpack --mode=development -w"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/boot": "^1.7.4",
    "@loopback/context": "^1.25.1",
    "@loopback/core": "^1.12.4",
    "@loopback/openapi-v3": "^1.13.0",
    "@loopback/repository": "^1.19.1",
    "@loopback/rest": "^1.26.1",
    "@loopback/rest-explorer": "^1.4.10",
    "@loopback/service-proxy": "^1.3.17",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "autosuggest-highlight": "^3.1.1",
    "axios": "^0.21.2",
    "babel-polyfill": "^6.26.0",
    "loopback-connector-mongodb": "^4.2.0",
    "nodemailer": "^6.6.1",
    "react": "^16.14.0",
    "react-autosuggest": "^9.4.3",
    "react-dom": "^16.14.0",
    "react-markdown": "^4.3.1",
    "remark-breaks": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@loopback/build": "^9.0.4",
    "@loopback/testlab": "^1.10.3",
    "@loopback/tslint-config": "^2.0.4",
    "@types/node": "^10.17.50",
    "@types/nodemailer": "^6.4.0",
    "babel-loader": "^8.2.2",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "webpack": "^4.45.0",
    "webpack-cli": "^3.3.12"
  }
}
